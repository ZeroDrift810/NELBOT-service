# ===========================================
# NEL Bot Configuration Template
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Location of snallabot deployment
DEPLOYMENT_URL=http://localhost:3001
PORT=3001

# ===========================================
# DISCORD CONFIGURATION (REQUIRED)
# ===========================================
# Create your Discord application at https://discord.com/developers/applications
# NEVER commit these values to version control!

# Your Discord application's public key
PUBLIC_KEY=your_discord_public_key_here

# Your Discord bot token
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord application ID
APP_ID=your_discord_app_id_here

# Your Discord server (guild) ID for testing
GUILD_ID=your_discord_guild_id_here
NEL_GUILD_ID=your_discord_guild_id_here

# Your Madden league ID (if applicable)
GUILD_LEAGUE_ID=your_league_id_here
LEAGUE_ID=your_league_id_here
CONNECTED_LEAGUE_ID=your_league_id_here

# Discord OAuth2 client secret (optional but recommended)
CLIENT_SECRET=your_discord_client_secret_here

# Set to true to disable posting to staff hub
POST_STAFF_HUB=false

# ===========================================
# DISCORD CLIENT OPTIONS
# ===========================================
# Set to true to turn off Discord client that listens to reactions and role changes
# NO_CLIENT=true

# ===========================================
# GOOGLE CLOUD / FIREBASE CONFIGURATION
# ===========================================
# Required for production deployment with Firebase and Google Cloud Storage
# If not configured, a Firebase emulator will be used with local file system

# Path to your Firebase service account JSON file
# Download from Firebase Console > Project Settings > Service Accounts
SERVICE_ACCOUNT_FILE=/path/to/your/service-account.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json

# Your Google Cloud project ID
GCLOUD_PROJECT=your-gcp-project-id

# Set to true to use Google Cloud Storage for images/files
USE_GCS=false

# Set to false to use Firebase emulator (for local development)
USE_FIRESTORE_EMULATOR=true

# ===========================================
# TWITCH INTEGRATION (OPTIONAL)
# ===========================================
# Required for Twitch stream notifications
# Get credentials from https://dev.twitch.tv/console/apps

# Callback URL for Twitch webhooks (defaults to DEPLOYMENT_URL/twitch/webhook)
TWITCH_CALLBACK_URL=

# Your Twitch application client ID
TWITCH_CLIENT_ID=your_twitch_client_id_here

# Your Twitch application client secret
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Random secret for Twitch EventSub webhook verification
# Generate with: openssl rand -hex 32
TWITCH_SECRET=your_random_twitch_secret_here

# ===========================================
# YOUTUBE INTEGRATION (OPTIONAL)
# ===========================================
# Required for YouTube channel name retrieval
# Get from Google Cloud Console > APIs & Services > Credentials

YOUTUBE_API_KEY=your_youtube_api_key_here

# ===========================================
# NEL UTILITY BOT WEBHOOK (OPTIONAL)
# ===========================================
# For automatic stream logging integration with NEL Utility Bot

# Discord ID of the user who manages webhooks
NEL_UTILITY_WEBHOOK_DISCORD_ID=your_discord_user_id_here

# Webhook URL for stream online events
NEL_UTILITY_WEBHOOK_STREAM_ONLINE=https://your-webhook-url/stream-online

# Webhook URL for stream offline events
NEL_UTILITY_WEBHOOK_STREAM_OFFLINE=https://your-webhook-url/stream-offline

# ===========================================
# ANTHROPIC AI (OPTIONAL)
# ===========================================
# Required for AI-generated game recaps and power rankings
# Get from https://console.anthropic.com/

ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# ADVANCED OPTIONS
# ===========================================

# Optimize Firestore writes (not recommended for self-hosting)
# USE_WRITE_HASHES=true

# ===========================================
# DEVELOPMENT / DEBUGGING
# ===========================================

# Set log level (error, warn, info, debug)
LOG_LEVEL=info
